{
    "extends": "@repo/typescript-config",
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "bundler",
        "skipLibCheck": true
    },
    "include": ["**/*.ts", "**/*.tsx", "**/**/*.ts", "**/**/*.tsx"],
    "exclude": ["node_modules"]
}
