{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "NEXT_PUBLIC_*",
    "CLERK_SECRET_KEY",
    "SENTRY_*",
    "KV_REST_API_*",
    "UPSTASH_*",
    "FREE_CREDITS_*",
    "GEMINI_API_KEY",
    "SERPER_API_KEY",
    "JINA_API_KEY",
    "PUSHER_*"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
