{
    "extends": "@repo/typescript-config/nextjs",
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.d.ts",
        ".next/types/**/*.ts",
        "tailwind.config.ts"
    ],
    "compilerOptions": {
        "paths": {
            "@repo/shared/types": ["./lib/types"],
            "@/hooks": ["./lib/hooks"],
            "@/libs/*": ["./lib/*"],
            "@/config/*": ["./config/*"],
            "@/context": ["./lib/context"],
            "@/services/*": ["./lib/services/*"],
            "@/*": ["./*"]
        },
        "baseUrl": "."
    }
}
