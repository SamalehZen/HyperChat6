{
    "extends": "@repo/typescript-config/react-library.json",
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "bundler",
        "module": "ESNext",
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"]
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "dist"]
}
